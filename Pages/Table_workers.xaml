<Page x:Class="savichev24pr.Pages.Table_workers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:savichev24pr.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Table_workers">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Button FontFamily="Arial" Content="Назад" Click="backClick" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Width="97" Height="30"/>
        </Grid>
        <DataGrid IsReadOnly="True" AutoGenerateColumns="False" x:Name="tableGrid" Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Rabotnik_kod}" Header="Код работника"  Width="90"/>
                <DataGridTextColumn Binding="{Binding Rabotnik_familia}" Header="Фамилия" Width="100"/>
                <DataGridTextColumn Binding="{Binding Rabotnik_imya}" Header="Имя" Width="100"/>
                <DataGridTextColumn Binding="{Binding Rabotnik_otchestvo}" Header="Отчество"  Width="100"/>
                <DataGridTextColumn Binding="{Binding Rabotnik_date_birth}" Header="Дата рождения" Width="100"/>
                <DataGridTextColumn Binding="{Binding Rabotnik_date_employment}" Header="Дата приема на работу" Width="100"/>
                <DataGridTextColumn Binding="{Binding Rabotnik_experience}" Header="Опыт работы(лет)"  Width="100"/>
                <DataGridTextColumn Binding="{Binding Rabotnik_job}" Header="Код должности" Width="100"/>
                <DataGridTextColumn Binding="{Binding Rabotnik_pol}" Header="Пол" Width="50"/>
                <DataGridTextColumn Binding="{Binding Rabotnik_adress}" Header="Адрес" Width="100"/>
                <DataGridTextColumn Binding="{Binding Rabotnik_town}" Header="Город"  Width="100"/>
                <DataGridTextColumn Binding="{Binding Rabotnik_phone}" Header="Телефон" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.Row="2">
            <Button x:Name="add" FontFamily="Arial" Content="Добавить" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Width="97" Height="30"/>
            <Button x:Name="delete" FontFamily="Arial" Content="Удалить" HorizontalAlignment="Left" Margin="112,0,0,0" VerticalAlignment="Center" Width="97" Height="30"/>
            <Button x:Name="edit" FontFamily="Arial" Content="Редактировать" HorizontalAlignment="Left" Margin="214,0,0,0" VerticalAlignment="Center" Width="97" Height="30"/>
        </Grid>
    </Grid>
</Page>
